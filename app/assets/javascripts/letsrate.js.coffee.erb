$.fn.raty.defaults.path = "/assets"
$.fn.raty.defaults.half_show = false
$ ->
  console.log("YO")
  $(".star").css opacity: "0.60"
  $(".star").hover (->
    $(this).css opacity: "1"
  ), ->
    $(this).css opacity: "0.60"

  $.each $(".star"), (idx, elm) ->
    readOnly = $(elm).data('readonly')

    $(elm).raty
      half: true,
      readOnly: readOnly

      score: ->
        $(elm).data "rating"

      number: ->
        $(elm).data "star-count"

      click: (score, evt) ->
        el = $(this)

        $.post "<%= Rails.application.class.routes.url_helpers.rate_path %>",

          score: score
          dimension: $(this).data("dimension")
          id: $(this).data("id")
          klass: $(this).data("classname")
        , (data) ->
          if el.attr('data-disable-after-rate') == 'true'
            el.raty('readOnly', true)

          data

        $('#totalrating').load(document.URL + ' #totalrating') /note: the space before #totalrating is very important
